<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans" xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Server connector -->
  <bean class="org.springframework.jmx.support.ConnectorServerFactoryBean" id="serverConnector">
    <property name="objectName" value="connector:name=rmi" />
    <property name="serviceUrl"
      value="service:jmx:rmi://localhost/jndi/rmi://localhost:9999/connector" />
  </bean>

</beans>